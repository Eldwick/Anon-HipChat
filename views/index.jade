extends layout

block content

  img(src='/images/titleImage.png', alt='Anon Chat Logo' class='center-block')
  h1.text-center Have a question? Afraid to ask? Send to the chat anonymously!

  form(action='/sendChat', method='post')
    .form-group
      input(type='text' id='nickName' class="form-control" name='nickName' placeholder='Nick Name or Alias')
    .form-group
      textarea(id='message' name='message'  class="form-control"  placeholder='Message')
    .form-group
      input(type='text' id='img' name='img'  class="form-control" placeholder='Img URL')
    .form-group
    select( id='color' name='color' class="form-control" ) 
      option(value='') None
      option(value='red') Red
      option(value='yellow') Yellow
      option(value='purple') Purple
      option(value='green') Green
      option(value='gray') Gray
      option(value='random') Random
    br
    input(type="submit" id="submitButton" value='Send' class="btn btn-danger col-md-3") 
            